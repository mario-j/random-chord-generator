<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="hu.ait.randomchordgenerator">

    <application
            android:allowBackup="true"
            android:icon="@drawable/ic_main_icon_layer"
            android:label="RandomChords"
            android:roundIcon="@drawable/ic_main_icon_layer"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">

        <activity
                android:name=".Keyboard"
                android:label="Keyboard">
        </activity>

        <activity
                android:name=".SavedChordsRow"
                android:label="SavedChords">
        </activity>

        <activity
                android:name=".MainActivity"
                android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
    </application>

</manifest>